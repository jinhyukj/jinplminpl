<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    android:tag="TAB3">


    <LinearLayout
        android:id="@+id/size_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:id="@+id/txtPenSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="5dp"
            android:layout_gravity="center"
            android:textColor="@color/black"></TextView>

        <SeekBar
            android:id="@+id/penSize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"
            android:max="50" />

        <ImageButton
            android:id="@+id/btnColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="center"
            android:layout_gravity="center"
            android:src="@drawable/ic_color"></ImageButton>

        <Switch
            android:id="@+id/lock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:text="LOCK" />
    </LinearLayout>

    <com.example.paint.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        app:backgroundColor="#ffffff"
        app:enableSignature='true'
        app:penColor="#000000" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/undo"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="center"
            android:src="@drawable/undo"></ImageButton>

        <ImageButton
            android:id="@+id/redo"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="center"
            android:src="@drawable/redo"></ImageButton>

        <ImageButton
            android:id="@+id/btnEraser"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="center"
            android:src="@drawable/ic_eraser"></ImageButton>



        <ImageButton
            android:id="@+id/ChoosePictureButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_image_search_24">
        </ImageButton>


        <ImageButton
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="center"
            android:src="@drawable/save"></ImageButton>
    </LinearLayout>
</RelativeLayout>